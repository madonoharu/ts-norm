{
  "name": "ts-norm",
  "version": "0.4.0",
  "description": "A normalizr like library for TypeScript",
  "keywords": [
    "normalizr",
    "typescript",
    "normalize",
    "denormalize",
    "redux"
  ],
  "repository": "git@github.com:madonoharu/ts-norm.git",
  "license": "MIT",
  "author": "Madono Haru <madonoharu@gmail.com>",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "cjs/index.d.ts",
  "files": [
    "cjs",
    "esm"
  ],
  "scripts": {
    "build": "yarn build:esm & yarn build:cjs",
    "build:cjs": "tsc -p tsconfig.build.json --outDir cjs -m commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir esm",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
